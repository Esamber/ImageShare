@model ViewImageViewModel


<div class="row align-content-center">
    @if (!Model.PasswordEntered)
    {
    <div class="col-md-6 offset-md-3 jumbotron">
        @if (Model.FalsePassword)
        {
            <h3 class="alert-danger">Incorrect password</h3>
        }
        <form action="/home/submitpassword">
            <h3>Please enter the password for this image:</h3>
            <br />
            <input type="hidden" name="imageId" value="@Model.Image.Id" />
            <input class="form-control" type="text" name="password" placeholder="Password" />
            <br />
            <div class="col text-center">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    }
    else
    {
        <div class="col-md-8 offset-md-2 align-content-center">
            <img src="/uploads/@Model.Image.FileName" style="width: 500px;" />
            <br />
            <h3>Views: @Model.Image.Views</h3>
        </div>
    }
</div>